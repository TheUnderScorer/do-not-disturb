{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "types": [
      "mocha",
      "node"
    ]
  },
  "include": [
    "src",
    "tsup.config.ts",
    "test"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
